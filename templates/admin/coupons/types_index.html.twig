{% extends 'base.html.twig' %}

{% block title %}Types de coupons{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Types de coupons</h1>
        <div>
            <a href="{{ path('admin_coupons_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour aux coupons
            </a>
            <a href="{{ path('admin_coupons_types_add') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau type
            </a>
        </div>
    </div>

    {% include '_partials/_flash.html.twig' %}

    {% if coupons_types is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun type de coupon n'a été créé pour le moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Nombre de coupons</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for type in coupons_types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td><strong>{{ type.name }}</strong></td>
                        <td>
                            <span class="badge bg-secondary">{{ type.coupons|length }} coupon(s)</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_coupons_types_edit', {id: type.id}) }}" 
                                   class="btn btn-warning" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal{{ type.id }}"
                                        title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <!-- Modal de confirmation de suppression -->
                    <div class="modal fade" id="deleteModal{{ type.id }}" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirmer la suppression</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr de vouloir supprimer le type <strong>{{ type.name }}</strong> ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <form method="post" action="{{ path('admin_coupons_types_delete', {id: type.id}) }}">
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
