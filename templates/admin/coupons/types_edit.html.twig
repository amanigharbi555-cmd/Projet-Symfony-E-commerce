{% extends 'base.html.twig' %}

{% block title %}Modifier un type de coupon{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Modifier: {{ coupon_type.name }}
                    </h2>
                </div>
                <div class="card-body">
                    {% include '_partials/_flash.html.twig' %}
                    
                    <div class="alert alert-info mb-4">
                        <strong>Coupons associ√©s:</strong> {{ coupon_type.coupons|length }}
                    </div>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.name) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_coupons_types_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
