{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-4 shadow-sm rounded">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0">
                        <i class="bi bi-speedometer2 text-danger"></i> Dashboard
                    </h1>
                </div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <div class="card border-danger shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Catégories</h6>
                                        <h3 class="mb-0 text-danger">{{ categories_count|default(0) }}</h3>
                                    </div>
                                    <div class="text-danger" style="font-size: 2.5rem;">
                                        <i class="bi bi-tags"></i>
                                    </div>
                                </div>
                                <a href="{{ path('admin_categories_index') }}" class="btn btn-sm btn-outline-danger mt-2 w-100">
                                    Voir toutes <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-success shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Produits</h6>
                                        <h3 class="mb-0 text-success">{{ products_count|default(0) }}</h3>
                                    </div>
                                    <div class="text-success" style="font-size: 2.5rem;">
                                        <i class="bi bi-box-seam"></i>
                                    </div>
                                </div>
                                <a href="{{ path('admin_products_index') }}" class="btn btn-sm btn-outline-success mt-2 w-100">
                                    Voir tous <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-info shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-1">Utilisateurs</h6>
                                        <h3 class="mb-0 text-info">{{ users_count|default(0) }}</h3>
                                    </div>
                                    <div class="text-info" style="font-size: 2.5rem;">
                                        <i class="bi bi-people"></i>
                                    </div>
                                </div>
                                <a href="{{ path('admin_users_index') }}" class="btn btn-sm btn-outline-info mt-2 w-100">
                                    Voir tous <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <a href="{{ path('admin_categories_add') }}" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-plus-circle"></i> Nouvelle catégorie
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="{{ path('admin_products_add') }}" class="btn btn-outline-success w-100">
                                    <i class="bi bi-plus-circle"></i> Nouveau produit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}