{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-bag-check text-danger"></i> Mes commandes
                </h1>
                <a href="{{ path('profile_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour au profil
                </a>
            </div>
        </div>
    </div>

    {% if orders is empty %}
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center p-5">
                        <i class="bi bi-bag-x text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">Aucune commande</h4>
                        <p class="text-muted">Vous n'avez pas encore passé de commande.</p>
                        <a href="{{ path('main') }}" class="btn btn-danger">
                            <i class="bi bi-shop"></i> Découvrir nos produits
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Référence</th>
                                        <th>Date</th>
                                        <th>Statut</th>
                                        <th>Total</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for order in orders %}
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">{{ order.reference }}</span>
                                            </td>
                                            <td>
                                                <i class="bi bi-calendar"></i> 
                                                {{ order.createdAt|date('d/m/Y H:i') }}
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Confirmée
                                                </span>
                                            </td>
                                            <td>
                                                {% set total = 0 %}
                                                {% for detail in order.ordersDetails %}
                                                    {% set total = total + (detail.price * detail.quantity) %}
                                                {% endfor %}
                                                <strong>{{ (total / 100)|number_format(2, ',', ' ') }} TND</strong>
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('profile_order_details', {id: order.id}) }}" class="btn btn-sm btn-outline-danger" title="Voir les détails">
                                                    <i class="bi bi-eye"></i> Détails
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

